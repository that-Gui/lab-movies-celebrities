{{!-- movie details page --}}
<h1>{{movdets.title}} details page</h1>
<hr>
<div>
<h3>{{movdets.title}}</h3>
<p>{{movdets.genre}}</p>
<p>{{movdets.plot}}</p>
{{#each movdets.cast}}
    <p>{{this.name}}</p>
    <p>{{this.occupation}}</p>
    <p>{{this.catchPhrase}}</p>
{{/each}}
</div>
<hr>
<div>
<a href='/movies/{{movdets._id}}/edit'>edit movie details</a>
</div>
<hr>
<div>
<form action="/movies/{{movdets._id}}/delete" method="post">

    <button type="submit">Delete this movie from the DB</button>

</form>
</div>