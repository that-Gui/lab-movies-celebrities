{{!-- new movie form --}}
<h1>Add a new Flick</h1>

<form action="/movies/create" method="post">
    <label>title</label>
    <input type="text" name="title" />
    
    <label>genre</label>
    <input type="text" name="genre" />

    <label>plot</label>
    <input type="text" name="plot" />

    <label for="cars">Cast</label>
    {{#each Celebrity}}
        <select name="cast" multiple></select>
        <option value="{{this._id}}"> {{this.name}} </option>
        </select>
    {{/each}}
    
    <button type="submit">Add new Movie to BD</button>

</form>